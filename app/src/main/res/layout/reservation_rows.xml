<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_reservation_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/baseline_send_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_reservation_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrada"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/img_reservation_status"
        app:layout_constraintStart_toEndOf="@+id/img_reservation_status"/>

    <TextView
        android:id="@+id/txt_reservation_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0000001"
        app:layout_constraintStart_toStartOf="@+id/txt_reservation_status"
        app:layout_constraintTop_toBottomOf="@+id/txt_reservation_status" />

    <TextView
        android:id="@+id/txt_reservation_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reserva para o dia 25 Dez 2024"
        app:layout_constraintStart_toStartOf="@+id/txt_reservation_id"
        app:layout_constraintTop_toBottomOf="@+id/txt_reservation_id" />

</androidx.constraintlayout.widget.ConstraintLayout>